extends ../base

block content
	#message
	if message
		.alert.alert-danger(role='alert') #{message}
	h1.text-center.poll-title Add new poll

	form(method="post", action="")
		.form-group
			label Poll name
			input.form-control(type="text", name="poll_name")
		div#addhere
			.form-group
				label Choice 1
				input.form-control(type="text", name="choice1")
			.form-group
				label Choice 2
				input.form-control(type="text", name="choice2")
		a#addchoice.btn.btn-default.bu-size(href="#")
			span(class="glyphicon glyphicon-plus" aria-hidden="true") 
			|  Add Choice
		.text-center
			button.btn.btn-primary.bu-size(type="submit", value="Add Poll") Add Poll

block scripts
	script.
		var count = 2;
		$("#addchoice").on("click",function(){
			count += 1;
			var html = '<div class="form-group"><label>Choice '+ count.toString() + '</label><input type="text" name="choice'+ count.toString() + '" class="form-control"/></div>';
			$('#addhere').append(html);
		});
